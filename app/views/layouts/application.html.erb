<!DOCTYPE html>
<html>
  <head>
    <title>TweeterRedesign</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script
  src="https://kit.fontawesome.com/16d2250538.js"
  crossorigin="anonymous"
></script>
  </head>

  <body>
    <% flash.each do |type, message| %>
			<div><%= message %></div>
	<% end %>
  <div class="d-flex">
  
  <div class="left col-2 bg-dark">
  <% if logged_in? %>
  <div class="d-flex justify-content-around">

   <img src="<%=current_user.Photo%>" class="profile_photo"/>
<p class="text-white"><%= current_user.Username%></p>

  </div>
  	
  <div class="d-flex justify-content-between ">
  <div class="text-center text-white">
  <p class="m-auto"><%= current_user.followers.count%></p>
  <h6>Followers</h6>
  </div>
  <div class="text-center text-white">
  <p class="m-auto"><%= current_user.followed_users.count%></p>
  <h6>Following</h6>
  </div>
  </div>
  
  <nav class="navbar ">

  <!-- Links -->
  <ul class="navbar-nav ">

    <li class="nav-item ">
          <%= link_to users_path, class: "nav-link text-light" do %>
           <i class="fas fa-home"></i> Home
           <% end %>
   
    </li>
    
    <li class="nav-item">
      
        <%= link_to users_path, class: "nav-link text-light" do %>
           <i class="fas fas fa-link"></i> Connect
           <% end %>
    </li>
      <li class="nav-item">
      
      
            
            
            <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
           <i class="fas fa-user-alt"></i> Profile
           <% end %>

    </li>
      <li class="nav-item ">
          <%= link_to posts_path, class: "nav-link text-light" do %>
           <i class="fas fa-hashtag"></i> Discover
           <% end %>
    </li>
    
     <li class="nav-item ">
          <%= link_to posts_path, class: "nav-link text-light" do %>
           <i class="fas fa-clock"></i> Statistics
           <% end %>
    </li>
  </ul>

</nav>

<% end %>
  </div>
<div class="main_page col-10">
  
  <nav class="navbar navbar-expand-lg bg-primary navbar-dark d-flex justify-content-between">
  <!-- Brand/logo -->
  
  <a class="navbar-brand" href="#"><i class="fab fa-twitter"></i></a>
  
  <!-- Links -->
  <ul class="navbar-nav d-flex ">
  	<% if !logged_in? %>
    <li class="nav-item ">
      <a class="nav-link mr-4" href="#"><i class="fas fa-pen"></i></a>
    </li>
    <li class="nav-item mr-4">
    <%= link_to 'Log In' ,new_session_path, class: "nav-link" %>
    </li>
    <li class="nav-item ">
    <%= link_to 'Sign_up' ,new_user_path, class: "nav-link " %>
      
    </li>
    <% else %>
   <li class="nav-item ">
   <a href="#" class="nav-link"> 
   <%= current_user.Username%>
   </a>
   </li>
        <li class="nav-item ">
    <%= link_to 'Log out', logout_path, method: :delete, class: "nav-link" %>
      
    </li>
    <% end %>
  </ul>
  
</nav>


 <div class="content ">

  <%= yield %>
  </div>

  </div>
  </div>
  </div>
  <footer class="footer bg-dark">
  <p class="text-light text-center">Copy Right 2020 @All Rights Reserved</p>
  </footer>
  
    
  </body>
</html>
